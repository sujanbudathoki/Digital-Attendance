@model IEnumerable<MyAttendance.Models.Components.Standard>

@{
    ViewBag.Title = "Index";
    var count = 0;
}

<h2>Standard Management</h2>

<p>
    @Html.ActionLink("Create New", "Create",null,new { @class="btn btn-primary"})
</p>
<table class="table table-bordered">
    <tr>
        <th>
            S.N.
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StandardName)
        </th>
        <th>Action</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td></td>
            <td>--No Data Found--</td>
            <td></td>
        </tr>
    }
    else
    {
foreach (var item in Model)
{{ 
    count = count + 1;
}

    <tr>
        <td>@count</td>
        <td>
            @Html.DisplayFor(modelItem => item.StandardName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id },new { @class= "btn btn-primary" })<i class="fas fa-edit"></i> |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}}

</table>
<script>
    $(document).ready(function () {
        $('.sLayout').removeClass('active');
        $('#standard').addClass('active');
    })
</script>
