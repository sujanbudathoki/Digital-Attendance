    {
        <tr>
            <td></td>
            <td>--No Data Found--</td>
            <td></td>
        </tr>
    }
    else
    {
foreach (var item in Model)
{{ 
    count = count + 1;
}

    <tr>
        <td>@count</td>
        <td>
            @Html.DisplayFor(modelItem => item.StandardName)
        </td>
        <td>
            @Html.ActionLink(" " ,"Edit", new { id = item.Id },new { @class= "btn btn-primary fa fa-edit" }) |
