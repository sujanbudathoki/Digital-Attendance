@model IEnumerable<MyAttendance.Models.Components.Standard>

@{
    ViewBag.Title = "Index";
    var count = 0;
}

<h2 style="font-family:Cambria;color:#ff6a00">Standard Management</h2>

<p>
    @Html.ActionLink(" ", "Create",null,new { @class="btn btn-primary fas fa-plus"})
</p>
<table class="table table-bordered">
    <tr>
        <th>
