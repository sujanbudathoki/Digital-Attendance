@model MyAttendance.Models.Attendance.Date

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Date</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.date)


    <div class="col-md-10">
        <label>Holiday</label>
        @Html.RadioButtonFor(model => model.isHolidayFlag, new {@value=1,@id="holiday"})
        <label>Working Day</label>
        @Html.RadioButtonFor(model => model.isHolidayFlag,new { @value=2,@id="workingday" } )
        @Html.ValidationMessageFor(model => model.isHolidayFlag, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
