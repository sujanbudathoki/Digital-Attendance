            @foreach (var item in Model.Teacher)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleType)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info fa fa-edit " })
                    </td>
                </tr>
            }

        </table>
    </div>
    <div id="test-swipe-3" class="col s12">
        <span>

            @Html.ActionLink(" ", "", "", null, new { @class = "btn btn-primary fas fa-plus" })
            <label>ADD-STUDENT</label>
        </span>
        <table class="table table-bordered">
            <tr>
                <th>
                    Name
