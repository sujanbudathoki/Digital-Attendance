<script>
    $(document).ready(function () {
     
            $('.sLayout').removeClass('active');
            $('#roleManager').addClass('active');
       
        $('ul.tabs').tabs();

    });

    $(document).ready(function () {
        $('ul.tabs').tabs('select_tab', 'tab_id');
    });
</script>
